{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "query": {
            "type": "string",
            "description": "The search query string."
        },
        "num_results": {
            "type": "integer",
            "description": "Number of results to return.",
            "default": 10,
            "minimum": 1,
            "maximum": 50
        },
        "query_type": {
            "type": "string",
            "description": "Type of search query.",
            "enum": ["web", "news", "images"],
            "default": "web"
        }
    },
    "required": ["query"],
    "additionalProperties": false
}
