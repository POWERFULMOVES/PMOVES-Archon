{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "voice.agent.response.v1",
  "type": "object",
  "required": ["platform", "user_id", "message_id", "response_text", "timestamp"],
  "properties": {
    "platform": {
      "type": "string",
      "description": "Origin platform for the user message (discord, telegram, whatsapp, local, etc.)."
    },
    "user_id": {"type": "string"},
    "message_id": {"type": "string"},
    "response_text": {"type": "string"},
    "model_used": {"type": ["string", "null"]},
    "timestamp": {
      "type": "string",
      "description": "ISO8601 timestamp."
    },
    "sources": {
      "type": "array",
      "items": {"type": "string"}
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
