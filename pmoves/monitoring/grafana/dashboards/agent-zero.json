{
  "title": "Agent Zero",
  "description": "Control-plane orchestrator with embedded agent runtime and MCP API",
  "schemaVersion": 38,
  "version": 1,
  "uid": "agent-zero",
  "tags": ["agent", "orchestrator", "mcp", "agent-zero"],
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "Service Overview",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Service Status",
      "gridPos": { "x": 0, "y": 1, "w": 4, "h": 4 },
      "targets": [{ "expr": "up{job=\"agent-zero\"}", "legendFormat": "Status" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } },
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Requests",
      "gridPos": { "x": 4, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "sum(agent_zero_requests_total)", "legendFormat": "Requests" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "blue", "value": 0 }] } } }
    },
    {
      "type": "stat",
      "title": "Active Sessions",
      "gridPos": { "x": 9, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "agent_zero_active_sessions", "legendFormat": "Sessions" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": 0 }, { "color": "yellow", "value": 10 }, { "color": "red", "value": 50 }] } } }
    },
    {
      "type": "stat",
      "title": "MCP Tool Calls",
      "gridPos": { "x": 14, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "sum(agent_zero_mcp_requests_total)", "legendFormat": "MCP Calls" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "purple", "value": 0 }] } } }
    },
    {
      "type": "stat",
      "title": "P95 Latency",
      "gridPos": { "x": 19, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "histogram_quantile(0.95, sum(rate(agent_zero_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P95" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "unit": "s", "thresholds": { "steps": [{ "color": "green", "value": 0 }, { "color": "yellow", "value": 5 }, { "color": "red", "value": 15 }] } } }
    },
    {
      "type": "row",
      "title": "Request Metrics",
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Request Rate by Endpoint",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(agent_zero_requests_total[5m])) by (endpoint)", "legendFormat": "{{endpoint}}" }],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 30 } } }
    },
    {
      "type": "timeseries",
      "title": "Request Latency Percentiles",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.50, sum(rate(agent_zero_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P50" },
        { "expr": "histogram_quantile(0.95, sum(rate(agent_zero_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P95" },
        { "expr": "histogram_quantile(0.99, sum(rate(agent_zero_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P99" }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "fillOpacity": 10 } } }
    },
    {
      "type": "row",
      "title": "MCP & Sessions",
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "MCP Tool Calls by Tool",
      "gridPos": { "x": 0, "y": 15, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(agent_zero_mcp_requests_total[5m])) by (tool)", "legendFormat": "{{tool}}" }],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 30 } } }
    },
    {
      "type": "timeseries",
      "title": "Active Sessions Over Time",
      "gridPos": { "x": 12, "y": 15, "w": 12, "h": 8 },
      "targets": [{ "expr": "agent_zero_active_sessions", "legendFormat": "Active Sessions" }],
      "fieldConfig": { "defaults": { "custom": { "fillOpacity": 30 } } }
    },
    {
      "type": "row",
      "title": "Status Breakdown",
      "gridPos": { "x": 0, "y": 23, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Requests by Status",
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 6 },
      "targets": [{ "expr": "sum(rate(agent_zero_requests_total[5m])) by (status)", "legendFormat": "{{status}}" }],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 30 } } }
    }
  ],
  "time": { "from": "now-1h", "to": "now" }
}
