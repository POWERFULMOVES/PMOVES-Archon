{
  "title": "Hi-RAG v2",
  "description": "Hybrid RAG Gateway - Vector, Graph, and Full-text search with reranking",
  "schemaVersion": 38,
  "version": 1,
  "uid": "hi-rag-v2",
  "tags": ["rag", "search", "retrieval", "hi-rag"],
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "Service Overview",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Service Status",
      "gridPos": { "x": 0, "y": 1, "w": 4, "h": 4 },
      "targets": [{ "expr": "up{job=\"hi-rag-gateway-v2\"}", "legendFormat": "Status" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } },
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Queries",
      "gridPos": { "x": 4, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "sum(hirag_queries_total)", "legendFormat": "Queries" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "blue", "value": 0 }] } } }
    },
    {
      "type": "stat",
      "title": "Query Rate",
      "gridPos": { "x": 9, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "sum(rate(hirag_queries_total[5m]))", "legendFormat": "QPS" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "type": "stat",
      "title": "P95 Latency",
      "gridPos": { "x": 14, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "histogram_quantile(0.95, sum(rate(hirag_query_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P95" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "unit": "s", "thresholds": { "steps": [{ "color": "green", "value": 0 }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 3 }] } } }
    },
    {
      "type": "stat",
      "title": "DB Errors",
      "gridPos": { "x": 19, "y": 1, "w": 5, "h": 4 },
      "targets": [{ "expr": "sum(hirag_db_errors_total)", "legendFormat": "Errors" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": 0 }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 10 }] } } }
    },
    {
      "type": "row",
      "title": "Query Metrics",
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Query Rate by Namespace",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(hirag_queries_total[5m])) by (namespace)", "legendFormat": "{{namespace}}" }],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 30 } } }
    },
    {
      "type": "timeseries",
      "title": "Query Latency Percentiles",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.50, sum(rate(hirag_query_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P50" },
        { "expr": "histogram_quantile(0.95, sum(rate(hirag_query_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P95" },
        { "expr": "histogram_quantile(0.99, sum(rate(hirag_query_latency_seconds_bucket[5m])) by (le))", "legendFormat": "P99" }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "fillOpacity": 10 } } }
    },
    {
      "type": "row",
      "title": "Reranking Metrics",
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Rerank Requests by Provider",
      "gridPos": { "x": 0, "y": 15, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(hirag_rerank_requests_total[5m])) by (provider)", "legendFormat": "{{provider}}" }],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 30 } } }
    },
    {
      "type": "timeseries",
      "title": "Rerank Latency by Provider",
      "gridPos": { "x": 12, "y": 15, "w": 12, "h": 8 },
      "targets": [{ "expr": "histogram_quantile(0.95, sum(rate(hirag_rerank_latency_seconds_bucket[5m])) by (le, provider))", "legendFormat": "{{provider}} P95" }],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "fillOpacity": 10 } } }
    },
    {
      "type": "row",
      "title": "Ingest Metrics",
      "gridPos": { "x": 0, "y": 23, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Total Ingests",
      "gridPos": { "x": 0, "y": 24, "w": 6, "h": 4 },
      "targets": [{ "expr": "sum(hirag_ingest_total)", "legendFormat": "Ingests" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" }
    },
    {
      "type": "stat",
      "title": "Total Chunks",
      "gridPos": { "x": 6, "y": 24, "w": 6, "h": 4 },
      "targets": [{ "expr": "sum(hirag_ingest_chunks_total)", "legendFormat": "Chunks" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" }
    },
    {
      "type": "timeseries",
      "title": "Results Returned Distribution",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 6 },
      "targets": [{ "expr": "histogram_quantile(0.5, sum(rate(hirag_results_returned_bucket[5m])) by (le))", "legendFormat": "Median Results" }],
      "fieldConfig": { "defaults": { "custom": { "fillOpacity": 30 } } }
    }
  ],
  "time": { "from": "now-1h", "to": "now" }
}
